{
  "name": "@pkmn/streams",
  "version": "1.1.0",
  "description": "An automatically generated extraction of Pok√©mon Showdown's streams library",
  "repository": "github:pkmn/ps",
  "license": "MIT",
  "sideEffects": false,
  "main": "build/index.js",
  "module": "build/index.mjs",
  "types": "build/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "lint": "eslint --cache *.ts",
    "fix": "eslint --fix *.ts",
    "compile": "tsc -p .",
    "build": "npm run compile && node ../build index.ts",
    "pretest": "npm run build",
    "test": "npm run lint"
  },
  "eslintConfig": {
    "extends": "@pkmn",
    "rules": {
      "@typescript-eslint/quotes": "off",
      "@typescript-eslint/indent": [
        "error",
        "tab",
        {
          "flatTernaryExpressions": true
        }
      ],
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/member-delimiter-style": "off",
      "@typescript-eslint/no-floating-promises": [
        "error",
        {
          "ignoreVoid": true
        }
      ],
      "max-len": "off"
    }
  }
}
